<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ifood.cursoandroid.ifood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.ifood.cursoandroid.ifood.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.ifood.cursoandroid.ifood.activity.AutenticacaoActivity" />
        <activity android:name="br.com.ifood.cursoandroid.ifood.activity.HomeActivity" />
        <activity android:name="br.com.ifood.cursoandroid.ifood.activity.EmpresaActivity" />
        <activity
            android:name="br.com.ifood.cursoandroid.ifood.activity.ConfiguracoesEmpresaActivity"
            android:parentActivityName="br.com.ifood.cursoandroid.ifood.activity.EmpresaActivity" />
        <activity
            android:name="br.com.ifood.cursoandroid.ifood.activity.NovoProdutoEmpresaActivity"
            android:parentActivityName="br.com.ifood.cursoandroid.ifood.activity.EmpresaActivity" />
        <activity
            android:name="br.com.ifood.cursoandroid.ifood.activity.ConfiguracoesUsuarioActivity"
            android:parentActivityName="br.com.ifood.cursoandroid.ifood.activity.HomeActivity" />
        <activity
            android:name="br.com.ifood.cursoandroid.ifood.activity.CardapioActivity"
            android:parentActivityName="br.com.ifood.cursoandroid.ifood.activity.HomeActivity" />
        <activity android:name="br.com.ifood.cursoandroid.ifood.activity.PedidosActivity"
            android:parentActivityName="br.com.ifood.cursoandroid.ifood.activity.EmpresaActivity"></activity>
    </application>

</manifest>